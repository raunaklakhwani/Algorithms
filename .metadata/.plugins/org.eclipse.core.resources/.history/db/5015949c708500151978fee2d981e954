'''
5
acb
abc
dce
edc
aab
'''

from collections import defaultdict
N = input()
h = defaultdict(int)
count = 1
c = set([])
for _ in xrange(N):
    s = raw_input()
    s = sorted(list(s))
    ls = "".join(s)
    if h.get(ls) is None:
        h[ls] = 1
    else:
        h[ls] += 1
        c.add(ls)
print h
ans = 0
res = None
for key in c:
    ans += h[key]
    if res is None:
        res = key
    elif res > key:
        res = key
            
print ans
print res
    
        
    