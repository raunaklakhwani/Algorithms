c = 0
def recurse(index,res,size):
    global c
    if index == size:
        c += 1
        return 
    for i in "ABC":
        try:
            res.append(i)
            x = "".join(res).index(f1)
            y = "".join(res).index(f2)
            del res[-1]
        except IndexError:
            recurse(index + 1, res, size)
            
                
                
                
if __name__ == '__main__':
    size = 4
    f1 = "AB"
    f2 = "BA"
     
                
    
                
            
    
    
     
