def getIndex(num):
    j = len(active) - 1
    while j >= 0:
        if len(active[j]) > 0 and num > active[j][-1]:
            break
        j = j - 1
        if j >= 0:
            n = active[j][:]
            n.append(num)  
        else:
            n = [num]
        if len(active) != j + 1:
                del active[j + 1]
            active.insert(j+1,n)
   
N = int(raw_input())
active = []
for i in xrange(N):
    num = int(raw_input())
    getIndex(num)
    print active
print len(active[-1])

    