for _ in xrange(1):
    s = "8 101 102 103 104 105 106 103 104"
    li = map(int, s.split())
    del li[0]
    if len(li):
        visited = {}
        minimum = float("inf")
        li.sort()
        print li
        m = 1
        for i in xrange(1,len(li)):
            visited[li[i]] = True
            if li[i-1] + 1 == li[i]:
                m += 1
            else:
                if m < minimum:
                    minimum = m 
                m = 1
        print m
            
            
            
        
    else:
        print 0
