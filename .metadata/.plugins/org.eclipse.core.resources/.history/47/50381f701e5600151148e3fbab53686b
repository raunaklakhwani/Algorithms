from bisect import bisect_left
N = 3
li = [5, 8, 14]
P, Q = 4, 9
li.sort()
maximum = float("-inf")
maximumI = None

leftIndex = bisect_left(li,P)
rightIndex = bisect_left(li,Q)
if P < li[0]:
    minimum = abs(li[0] - P)
    if minimum > maximum:
        maximum = minimum
        maximumI = P
        
        
if Q > li[1]:
    minimum = abs(li[1]-Q)
    if minimum > maximum:
        maximum = minimum
        maximumI = Q
        

        
minimum = float("inf")    
for i in xrange(leftIndex,rightIndex):
    minimum = max(minimum,(li[i+1] - li[i]) / 2)
    if minimum > maximum:
        maximum = minimum
        maximumI = li[i] + (li[i+1] - li[i]) / 2


    
    
print maximumI
        
