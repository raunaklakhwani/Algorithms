'''
2
ababa
aba
vnssnssnssnssnssnssnssnssnssnssnssnssnssnssnssnssn
nssnssns
'''

mod = 10000000007
for _ in xrange(input()):
    ans = 0
    s = raw_input()
    z = raw_input()
    found = False
    ls = len(s)
    lz = len(z)
    for i in xrange(ls):
        if i + lz >= ls:
            break
        
        if s[i:i + lz] == z:
            found = True
            print "found"
            ans = (ans + (ls - i - lz)) % mod
            ans = (ans + (i - 1)) % mod
            
    if found:
        ans = (ans + 1) % mod
            
