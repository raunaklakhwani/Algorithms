

def standingOvation(smax, shynessString):
    l = []
    for i in range(0,smax + 1):
        l.append((i,int(shynessString[i])))
    
    minimum = 0
    person = 0
    print l
    for s,p in l:
        if s > person:
            minimum = minimum + s - person
            person = person + s - person
        person = person + p
        
    return minimum
        
    
        
