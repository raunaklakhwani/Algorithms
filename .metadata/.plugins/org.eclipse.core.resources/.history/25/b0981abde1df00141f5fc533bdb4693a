import sys


def standingOvation(smax, shynessString):
    l = []
    for i in range(0,smax + 1):
        l.append((i,int(shynessString[i])))
    
    minimum = 0
    numPersonStood = 0
    #print l
    for s,p in l:
        if s > numPersonStood:
            minimum = minimum + s - numPersonStood
            numPersonStood = numPersonStood + s - numPersonStood
        numPersonStood = numPersonStood + p
        
    return minimum
        
    
        
if __name__ == '__main__':
    args = sys.argv[2:]
    i = 0
    case = 0
    while i < len(args):
        print standingOvation()
        i = i+ 2
        case = case + 1
    for i in xrange(len(sys.argv) - 2):
        #print i+2, i+3
        i = i + 2
    
    print "#################"
    print standingOvation(4,"11111")
    print standingOvation(1,"09")
    
    print standingOvation(5,"110011")
    print standingOvation(0,"1")
    
    print 'hello'