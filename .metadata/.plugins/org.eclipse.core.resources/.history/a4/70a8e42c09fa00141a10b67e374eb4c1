def getLIS(i,num):
    m = 0
    i = i - 1
    while i >= 0:
        if num > l[i] and m < j[i]:
            m = j[i]
        i = i - 1
    if m!= 0 :
        return 1 + m
    else:
        return 1

N = int(raw_input())
l = []
for _ in xrange(N):
    l.append(int(raw_input()))
j = [1 for _ in xrange(N + 1)]
#print j
ma = -1
for i in xrange(1,N+1):
    j[i] = getLIS(i-1,l[i-1])
    if ma < j[i]:
        ma = j[i]

print j
print max(j)